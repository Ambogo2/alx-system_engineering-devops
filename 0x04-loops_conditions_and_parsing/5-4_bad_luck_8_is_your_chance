#!/usr/bin/env bash
# This script is displaying "bad luck" on 4th loop, "Good luch" on 8th loop "Best luck" on other

i=0
while [ "$i" -lt 10 ]; do
    if [ "$i" -eq 3 ]; then
        echo "bad luck"
    elif [ "$i" -eq 7 ];then
        echo "good luck"
    else
        echo "Best School"
    fi
    ((i++))
done
